{{#if model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if showSkeleton}}
  <SkeletonUi::VersionsList />
{{else}}
  <VersionsList
    @permissions={{permissions}}
    @versions={{model.versions.entries}}
    @project={{model.project}}
  />

  {{#if (get permissions "create_version")}}
    <VersionsAddButton @project={{model.project}} />
  {{/if}}

  <ResourcePagination
    @meta={{model.versions.meta}}
    @onSelectPage={{action "selectPage"}}
  />
  {{outlet}}
{{/if}}
