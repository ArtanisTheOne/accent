{{#if showLoading}}
  <LoadingContent @label={{t "pods.project.edit.loading_content"}} />
{{else}}
  <ProjectSettings::Form
    @project={{project}}
    @permissions={{permissions}}
    @onUpdateProject={{action "updateProject"}}
  />
  <ProjectSettings::LinksList
    @project={{project}}
    @permissions={{permissions}}
  />
  {{#if (get permissions "delete_project")}}
    <ProjectSettings::DeleteForm
      @project={{project}}
      @onSubmit={{action "deleteProject"}}
    />
  {{/if}}
{{/if}}
