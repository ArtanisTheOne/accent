{{#if model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if showSkeleton}}
  <SkeletonUi::RelatedTranslationsList />
{{else}}
  <RelatedTranslationsList
    @project={{model.project}}
    @translations={{model.relatedTranslations}}
    @onUpdateText={{action "updateTranslation"}}
  />
{{/if}}
