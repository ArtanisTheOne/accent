{{#unless translation.removed}}
  <TranslationEdit
    @translation={{model.translation}}
    @project={{model.project}}
    @permissions={{permissions}}
    @onUpdateText={{action "updateText"}}
    @onCorrectConflict={{action "correctConflict"}}
    @onUncorrectConflict={{action "uncorrectConflict"}}
  />
{{else}}
  <RemovedTranslationEdit @translation={{model.translation}} />
{{/unless}}
