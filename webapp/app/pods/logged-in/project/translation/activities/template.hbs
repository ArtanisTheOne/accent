{{#if model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if showSkeleton}}
  <SkeletonUi::ActivitiesList @showTranslationLink={{false}} />
{{else}}
  <TranslationActivitiesList
    @permissions={{permissions}}
    @project={{model.project}}
    @activities={{model.activities.entries}}
  />
  <ResourcePagination
    @meta={{model.activities.meta}}
    @onSelectPage={{action "selectPage"}}
  />
{{/if}}
