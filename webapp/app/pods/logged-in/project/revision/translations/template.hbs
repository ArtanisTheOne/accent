<TranslationsFilter
  @query={{query}}
  @document={{document}}
  @documents={{model.documents}}
  @version={{version}}
  @versions={{model.project.versions.entries}}
  @onChangeQuery={{action "changeQuery"}}
  @onChangeDocument={{action "changeDocument"}}
  @onChangeVersion={{action "changeVersion"}}
  @meta={{model.translations.meta}}
/>
{{#if model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if showSkeleton}}
  <SkeletonUi::TranslationsList />
{{else if showLoading}}
  <LoadingContent @label={{t "pods.project.translations.loading_content"}} />
{{else}}
  <TranslationsList
    @project={{model.project}}
    @revisionId={{model.revisionId}}
    @translations={{model.translations.entries}}
    @query={{query}}
    @onUpdateText={{action "updateText"}}
  />
  <ResourcePagination
    @meta={{model.translations.meta}}
    @onSelectPage={{action "selectPage"}}
  />
{{/if}}
