<JiptTranslation>
  {{#if showSkeleton}}
    <SkeletonUi::TranslationSplashTitle />
  {{else}}
    <JiptBackToTranslations />
    <TranslationSplashTitle
      @project={{model.project}}
      @translation={{model.translation}}
      @withRevisionLink={{false}}
    />
  {{/if}}
  {{#if model.loading}}
    <SkeletonUi::ProgressLine />
  {{/if}}
  {{outlet}}
</JiptTranslation>
