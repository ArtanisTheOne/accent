<AccSelect
  @search={{action "searchLanguages"}}
  @searchEnabled={{true}}
  @options={{mappedLanguages}}
  @selected={{languageValue}}
  placeholder={{t
    "components.project_manage_languages_create_form.language_search_placeholder"
  }}
  @searchPlaceholder={{t
    "components.project_manage_languages_create_form.language_search_placeholder"
  }}
  @onchange={{action (mut language) value="value"}}
/>

<AsyncButton
  @onClick={{action "submit"}}
  class="button button--filled"
  @loading={{isLoading}}
  @disabled={{emptyLanguage}}
>
  {{t "components.project_manage_languages_create_form.save_button"}}
</AsyncButton>
